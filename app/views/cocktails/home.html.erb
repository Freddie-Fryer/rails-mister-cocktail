<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
  <ol class="carousel-indicators">
    <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"></li>
    <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"></li>
    <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active" data-bs-interval="10000">
      <% cocktail_1 = @cocktails.sample %>
      <img src="https://miro.medium.com/max/10020/0*pVTtTdJA65mVudPx" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5><%= link_to cocktail_1.name, cocktail_path(cocktail_1), class: 'card-link' %></h5>
      </div>
    </div>
    <div class="carousel-item" data-bs-interval="2000">
      <% cocktail_2 = @cocktails.sample %>
      <img src="https://hips.hearstapps.com/del.h-cdn.co/assets/15/38/1442432590-delish-halloween-cocktails-sweet-poison.png" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5><%= link_to cocktail_2.name, cocktail_path(cocktail_2), class: 'card-link' %></h5>
      </div>
    </div>
    <div class="carousel-item">
      <% cocktail_3 = @cocktails.sample %>
      <img src="https://www.thespruceeats.com/thmb/8w9Zmdiva5L23O_HJhjgYC-jKEU=/1365x1365/smart/filters:no_upscale()/tequila-sunrise-recipe-760754-19_preview-5b02f856119fa80037651942.jpeg" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5><%= link_to cocktail_3.name, cocktail_path(cocktail_3), class: 'card-link' %></h5>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </a>
</div>