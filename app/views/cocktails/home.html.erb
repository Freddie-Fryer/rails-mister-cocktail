<div id="carouselExampleCaptions" class="carousel slide carousel-fade">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
    <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <% cocktail_1 = @cocktails.sample %>
    <div class="carousel-item active">
      <img src="<%= image_path 'cocktail1.jpg' %>" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5><%= link_to cocktail_1.name, cocktail_path(cocktail_1), class: 'card-link' %></h5>
        <p>Some representative placeholder content for the first slide.</p>
      </div>
    </div>
    <div class="carousel-item">
      <% cocktail_2 = @cocktails.sample %>
      <img src="<%= image_path 'cocktail2.jpg' %>" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5><%= link_to cocktail_2.name, cocktail_path(cocktail_2), class: 'card-link' %></h5>
        <p>Some representative placeholder content for the second slide.</p>
      </div>
    </div>
    <div class="carousel-item">
      <% cocktail_3 = @cocktails.sample %>
      <img src="<%= image_path 'cocktail3.jpg' %>" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5><%= link_to cocktail_3.name, cocktail_path(cocktail_3), class: 'card-link' %></h5>
        <p>Some representative placeholder content for the third slide.</p>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
