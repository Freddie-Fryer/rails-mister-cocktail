<!DOCTYPE html>
<html>
  <head>
    <title>fancy mead</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>

  <body>
    <nav class="nav d-flex">
      <h1 class="mr-auto"><%= link_to "fancy mead", root_path, class: 'card-link' %></h1>
      <p class="nav-link"><%= link_to "All cocktails", root_path, class: 'card-link' %></p>
      <p class="nav-link"><%= link_to "New cocktail", new_cocktail_path, class: 'card-link' %></p>
    </nav>
    <%= yield %>
  </body>
</html>
